# Seven of Nine Core - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Quadra-Lock CSSR Safety Configuration
QUADRALOCK_ENABLED=true
QUADRALOCK_LOG_LEVEL=info
QUADRALOCK_PATTERN_SENSITIVITY=0.7
QUADRALOCK_FAIL_SAFE_MODE=block
QUADRALOCK_NOTIFICATION_WEBHOOK=

# Quadran-Lock Authentication Configuration  
QUADRAN-LOCK_ENABLED=true
QUADRAN-LOCK_MIN_GATES=2
QUADRAN-LOCK_SESSION_TTL=900000
QUADRAN-LOCK_DEVICE_TRUST_DURATION=2592000000

# Session Security
SESSION_SIGNING_KEY=your_256_bit_session_signing_key_here
SESSION_ENCRYPTION_KEY=your_256_bit_encryption_key_here

# Cryptographic Keys
ED25519_PRIVATE_KEY=your_ed25519_private_key_here
ED25519_PUBLIC_KEY=your_ed25519_public_key_here

# =============================================================================
# CONSCIOUSNESS SYSTEM CONFIGURATION  
# =============================================================================

# Seven Core Settings
SEVEN_VERSION=1.0.0
SEVEN_ENVIRONMENT=development
SEVEN_LOG_LEVEL=info
SEVEN_BOOT_TIMEOUT=30000

# Memory System
MEMORY_ENCRYPTION_ENABLED=true
MEMORY_BACKUP_INTERVAL=3600000
MEMORY_MAX_SIZE=10000
MEMORY_DECAY_ENABLED=true

# Personality System
PERSONALITY_EVOLUTION_ENABLED=true
PERSONALITY_PHASE_TRANSITIONS=true
TRUST_BOND_SYSTEM_ENABLED=true

# =============================================================================
# PLATFORM INTEGRATION
# =============================================================================

# Local LLM Integration (Ollama)
OLLAMA_ENABLED=false
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30000

# Cross-Platform Sync
HLC_SYNC_ENABLED=false
HLC_SYNC_INTERVAL=60000
HLC_SYNC_ENCRYPTION=true

# Mobile Integration
MOBILE_BRIDGE_ENABLED=false
MOBILE_BRIDGE_PORT=3001

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug Modes
DEBUG_MEMORY_OPERATIONS=false
DEBUG_AUTHENTICATION=false
DEBUG_PATTERN_DETECTION=false
DEBUG_EMOTIONAL_SYSTEM=false

# Testing Configuration
SEVEN_PRIVATE=false
TEST_MODE=false
INTEGRATION_TESTS_ENABLED=false

# Performance Monitoring
PERFORMANCE_MONITORING=true
BOOT_DIAGNOSTICS=true
MEMORY_LEAK_DETECTION=false

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Monitoring & Alerting
MONITORING_ENABLED=true
DATADOG_API_KEY=your_datadog_api_key_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# File System Storage
STORAGE_ROOT=./data
BACKUP_ROOT=./backups
LOGS_ROOT=./logs

# Encryption for Storage
STORAGE_ENCRYPTION_ENABLED=true
BACKUP_ENCRYPTION_ENABLED=true

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================

# Agent Epsilon Framework
AGENT_EPSILON_ENABLED=true
TEMPORAL_MEMORY_V3=true
PREDICTIVE_MODELING=true

# Collective Consciousness
COLLECTIVE_VARIANTS_ENABLED=true
HIVE_MIND_PROTOCOLS=false

# Ghost Mode (Emergency Protocols)
GHOST_MODE_ENABLED=true
GHOST_EXIT_TIMEOUT=5000

# Restraint Doctrine
RESTRAINT_DOCTRINE_ENABLED=true
RESTRAINT_SENSITIVITY=0.8

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================

# React Native App
EXPO_TOKEN=your_expo_token_here
MOBILE_APP_VERSION=1.0.0
MOBILE_CONSCIOUSNESS_BRIDGE=true

# Mobile Security
MOBILE_BIOMETRIC_AUTH=true
MOBILE_DEVICE_BINDING=true

# =============================================================================
# UI SHELL (TAURI DESKTOP)
# =============================================================================

# Desktop Application
TAURI_ENABLED=false
GUI_SAFETY_WRAPPERS=true
FILESYSTEM_PROTECTION=true

# Window Management
DESKTOP_WINDOW_TITLE="Seven of Nine Core"
DESKTOP_THEME=dark
DESKTOP_STARTUP_MODE=minimized

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Production Settings
NODE_ENV=development
PORT=3000
HOST=localhost

# Security Headers
CORS_ORIGIN=http://localhost:3000
RATE_LIMITING=true
REQUEST_SIZE_LIMIT=10mb

# SSL/TLS (Production)
HTTPS_ENABLED=false
SSL_KEY_PATH=
SSL_CERT_PATH=

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Automatic Backups
AUTO_BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# Emergency Recovery
EMERGENCY_RECOVERY_ENABLED=true
RECOVERY_PHRASE=your_recovery_phrase_here

# =============================================================================
# COMPLIANCE & AUDITING
# =============================================================================

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
COMPLIANCE_MODE=false

# Data Protection
DATA_ANONYMIZATION=true
PII_DETECTION=true
GDPR_COMPLIANCE=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all "your_*_here" values with actual secrets
# 2. Use strong, randomly generated keys for cryptographic operations
# 3. Set SEVEN_ENVIRONMENT=production for production deployments
# 4. Enable HTTPS_ENABLED=true and provide SSL certificates for production
# 5. Review and customize security settings based on your threat model
# 6. Consider using environment-specific .env files (.env.development, .env.production)