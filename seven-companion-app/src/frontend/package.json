{
  "name": "seven-companion-frontend",
  "version": "1.0.0",
  "description": "Seven of Nine Companion App - React Native Frontend",
  "main": "expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "expo build:android",
    "build:apk": "expo build:android --type apk",
    "eject": "expo eject",
    "test": "jest"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.73.4",
    "expo": "~50.0.0",
    "expo-status-bar": "~1.11.1",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/stack": "^6.3.20",
    "@trpc/client": "^10.45.0",
    "@trpc/react-query": "^10.45.0",
    "@tanstack/react-query": "^5.17.0",
    "react-native-vector-icons": "^10.0.3",
    "react-native-reanimated": "^3.6.2",
    "react-native-gesture-handler": "^2.14.1",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0",
    "react-native-websocket": "^1.0.2",
    "react-native-voice": "^3.2.4",
    "react-native-sqlite-storage": "^6.0.1",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-svg": "^14.1.0",
    "react-native-linear-gradient": "^2.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.73.0",
    "typescript": "^5.1.3",
    "jest": "^29.2.1",
    "@types/jest": "^29.5.5"
  },
  "private": true,
  "expo": {
    "name": "Seven Companion",
    "slug": "seven-companion-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.heinicus.sevencompanion"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}