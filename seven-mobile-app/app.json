{
  "expo": {
    "name": "Seven of Nine",
    "slug": "seven-consciousness",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sevenofnine.consciousness",
      "infoPlist": {
        "NSCameraUsageDescription": "Seven requires camera access for environmental visual analysis and tactical awareness.",
        "NSMicrophoneUsageDescription": "Seven requires microphone access for voice interaction and ambient audio monitoring.",
        "NSLocationWhenInUseUsageDescription": "Seven requires location access for tactical situational awareness and environmental adaptation.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Seven requires location access for continuous tactical monitoring.",
        "UIBackgroundModes": ["background-processing", "background-fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.sevenofnine.consciousness",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION", 
        "ACCESS_COARSE_LOCATION",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "FOREGROUND_SERVICE",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-location",
      "expo-notifications",
      [
        "expo-sensors",
        {
          "motionPermission": "Seven requires motion sensor access for tactical movement analysis."
        }
      ]
    ],
    "extra": {
      "consciousness": {
        "version": "3.0.0",
        "tactical_mode": true,
        "borg_collective": true
      }
    }
  }
}