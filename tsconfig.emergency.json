{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo/emergency.tsbuildinfo",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/backups/**",
    "consciousness-v4/**",
    "**/experimental/**",
    "memory-v3-hybrid/**"
  ]
}