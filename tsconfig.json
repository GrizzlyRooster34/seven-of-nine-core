{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src",
    "core",
    "interfaces",
    "memory-v3",
    "memory-v3-hybrid",
    ".claude",
    "examples",
    "scripts",
    "types",
    "spark",
    "db",
    "consciousness-v4",
    "tools",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "android",
    "ios",
    ".expo"
  ]
}