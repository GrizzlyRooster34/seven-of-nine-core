{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "seven-runtime/**/*.ts",
    "seven-core/**/*.ts",
    "claude-brain/**/*.ts",
    "core/**/*.ts",
    "tests/**/*.ts",
    "training/**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "ui-shell",
    "installers"
  ]
}
